{
  "name": "golden-nugget-finder",
  "version": "1.0.0",
  "main": "index.js",
  "displayName": "Golden Nugget Finder",
  "description": "Extract high-value insights from web content using AI",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:dev": "wxt build --mode development",
    "build:firefox": "wxt build -b firefox",
    "package": "wxt zip",
    "postinstall": "wxt prepare",
    "icons": "node scripts/generate-icons.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pnpm build:dev && playwright test",
    "test:e2e:ui": "pnpm build:dev && playwright test --ui",
    "test:e2e:debug": "pnpm build:dev && playwright test --debug",
    "test:e2e:headed": "pnpm build:dev && playwright test --headed",
    "test:e2e:report": "playwright show-report"
  },
  "keywords": [
    "browser-extension",
    "chrome-extension",
    "ai",
    "content-analysis",
    "web-extraction",
    "insights",
    "gemini",
    "productivity"
  ],
  "author": "Alex Ferrari",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexferrari88/golden-nugget-finder"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/chrome": "^0.1.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/ui": "^3.2.4",
    "@wxt-dev/module-react": "^1.1.3",
    "cross-env": "^7.0.3",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "sharp": "^0.34.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wxt": "^0.20.7"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "lucide-react": "^0.525.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "threads-harvester": "^1.0.2"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
